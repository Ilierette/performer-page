{
  "compilerOptions": {
      "outDir": "./dist",
      "sourceMap": true,
      "noImplicitAny": false,
      "module": "commonjs",
      "target": "es6",
      "jsx": "react",
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      // This must be specified if "paths" is set
      "baseUrl": "./src",
      // Relative to "baseUrl"
      "paths": {
          "*": [
              "*"
          ]
      }
  },
  "include": [
      "./**/*"
  ],
  "exclude": [
      "./node_modules/**/*"
  ]
}